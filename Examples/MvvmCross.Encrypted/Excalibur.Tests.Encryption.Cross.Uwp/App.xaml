<uwp:ExUwpApp x:Class="Excalibur.Tests.Encrypted.Cross.Uwp.App"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:uwp="using:Excalibur.Tests.Encrypted.Cross.Uwp"
                xmlns:converters="using:Excalibur.Tests.Encrypted.Cross.Uwp.Converters"
                RequestedTheme="Light">

    <uwp:ExUwpApp.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/GeneralStyles.xaml" />
                <ResourceDictionary Source="/Styles/CustomStyles.xaml" />
                <ResourceDictionary Source="/Styles/TextStyles.xaml" />
                <ResourceDictionary Source="/Styles/ButtonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:NativeLanguageConverter x:Key="Language" />
            <converters:VisibilityConverter x:Key="VisibilityConverter" />
            <converters:InverseVisibilityConverter x:Key="InverseVisibilityConverter" />

        </ResourceDictionary>
    </uwp:ExUwpApp.Resources>

</uwp:ExUwpApp>
